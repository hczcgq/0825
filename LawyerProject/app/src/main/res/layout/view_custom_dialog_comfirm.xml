<?xml version= "1.0" encoding ="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="260dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:textColor="#3CB6E3"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:textSize="22sp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#3CB6E3"/>
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:gravity="top|left"
                android:minHeight="60dip"
                android:maxHeight="300dip"
                android:text="dfsdafadsfa"
                android:padding="10dip"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#aab2be" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#ff7d7d7d"
                android:background="@android:color/transparent"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#aab2be" />

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="#ff7d7d7d"
                android:background="@android:color/transparent"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>